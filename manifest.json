{
  "manifest_version": 3,
  "name": "Video to Album Cover for YT Musicâ„¢",
  "version": "1.1",
  "description": "Replaces video on YouTube Music with Spotify album cover",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["https://music.youtube.com/*"],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "action": {
    "default_title": "Video to Album Cover",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "videotoalbumcover@example.com",
      "strict_min_version": "88.0"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["callback.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
